<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <!--  web.xml: Deployment Descriptor (dd파일) -->
  
  <!-- p.501 -->
  <!-- 태그 = 엘리먼트 // 서블릿 클래스 하나 만들때마다 밑의 엘리먼트들을 다 만들어야함. -->
  
  <servlet> <!-- 클래스와 서블릿 이름을 연결 -->
  	<servlet-name>now</servlet-name>	<!-- 서블릿 이름 지정 -->
  	<servlet-class>example.NowServlet</servlet-class> <!-- 클래스랑 연결 -->
  </servlet>
  
  <servlet-mapping> <!-- 서블릿 이름과 URL을 연결 -->
  	<servlet-name>now</servlet-name>
  	<url-pattern>/now</url-pattern> 
  </servlet-mapping>
</web-app>